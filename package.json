{
  "name": "root",
  "private": true,
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/fedlinker/fedlinker/blob/master/MIT-LICENSE"
    },
    {
      "type": "Anti-996",
      "url": "https://github.com/fedlinker/fedlinker/blob/master/Anti-996-LICENSE"
    }
  ],
  "scripts": {
    "lerna": "lerna",
    "test": "jest",
    "lint": "prettier --write \"**/*.{js,json,md}\" && eslint . --fix --ext \".js\""
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
